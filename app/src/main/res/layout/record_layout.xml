<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffcc"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <ImageButton
        android:src="@drawable/assessment"
        android:id="@+id/ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#ffffcc"
        android:layout_alignParentEnd="true"
        android:contentDescription="TODO" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成绩评估"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

        <com.example.circleprogress.CircleProgressView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/result"
            app:cpv_background_circle_color="#bfbfbf"
            app:cpv_background_circle_width="50dp"
            app:cpv_circle_color="#40B9F9"
            app:cpv_circle_width="50dp"
            app:cpv_first_from_second="50"
            app:cpv_inner_circle_color="#8DDAFF"
            app:cpv_isShowOutCircle="false"
            app:cpv_outside_ring_color="#FFFFFF"
            app:cpv_outside_ring_width="1dp"
            app:cpv_text_color="#FFFFFF"
            app:cpv_text_size="20"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:id="@+id/stability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:text="稳定性"
            android:textColor="#000000"
            android:textSize="25sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result"
        android:layout_marginLeft="230dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:text="综合评级"
        android:layout_marginStart="230dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stability"
            android:layout_marginLeft="90dp"
            android:id="@+id/actualStability"
            android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level"
        android:layout_below="@+id/stability"
        android:layout_marginLeft="270dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="220dp"
        android:textSize="30sp"
        android:text="绩点："
        android:textColor="#000000"
        android:layout_marginStart="220dp"
        android:id="@+id/totalGradePointArrange"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="220dp"
        android:textSize="30sp"
        android:text="总学分："
        android:textColor="#000000"
        android:id="@+id/totalCredit"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stability"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subject1"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gradePoint1"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_below="@+id/subject1"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level1"
                android:textColor="#CC0000"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score1"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/subject1"/>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subject2"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gradePoint2"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/subject2"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level2"
                android:textColor="#CC0000"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score2"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/subject2"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subject3"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gradePoint3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_below="@+id/subject3"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/level3"
                android:textColor="#CC0000"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/score3"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/subject3"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/subject4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/gradePoint4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/level4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#CC0000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/score4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject4"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="15sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:src="@drawable/success"></ImageView>
    </LinearLayout>
</RelativeLayout>
</ScrollView>